@layout MainLayout
@page "/dashboard"

<h2>Welcome @User.Profile.Name!</h2>

<div class="dashboard">
    <div class="stat-row">
        <span class="label">Total Words Unlocked:</span>
        <span class="value">@TotalWords</span>
    </div>

    <div class="action-row">
        <button class="main-button" @onclick='() => ChangePage("/studyvocab")'>Daily Vocab</button>
        <span class="label">Today's Words: @WordsToStudy</span>
    </div>

    <button class="main-button" @onclick='() => ChangePage("/unlocked")'>View Unlocked Words</button>

    <button class="main-button" @onclick="UnlockNextTier">Unlock Next Tier</button>
</div>