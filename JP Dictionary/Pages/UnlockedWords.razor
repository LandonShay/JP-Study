@layout MainLayout
@page "/unlocked"

<span>*You can edit definitions by clicking them</span>

<table>
    <thead>
        <tr>
            <th>
                Japanese
            </th>
            <th>
                Romaji
            </th>
            <th>
                Meaning
            </th>
            <th>
                Streak
            </th>
            <th>
                Next Review
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in TodaysWords)
        {
            <tr>
                <td>
                    @entry.Japanese
                </td>
                <td>
                    @entry.Pronounciation
                </td>
                <td>
                    @if (EditingEntry == entry)
                    {
                        <input @bind="EditingValue" @onblur="FinishEditing" class="definition-input" />
                    }
                    else
                    {
                        <span @onclick="() => StartEditing(entry)" style="cursor: pointer;">
                            @entry.Definitions
                        </span>
                    }
                </td>
                <td>
                    @entry.CorrectStreak
                </td>
                <td>
                    @HelperMethods.GetNextStudyDate(entry).ToShortDateString()
                </td>
                <td>
                    <button class="main-button" @onclick="() => ResetStreak(entry)">Reset Streak</button>
                </td>
            </tr>
        }
    </tbody>
</table>