@inherits LayoutComponentBase
@inject NavigationManager Nav

@code {
    private bool IsLoginPage => Nav.Uri.EndsWith("/");
}

<div class="layout">
    @if (!IsLoginPage)
    {
        <div class="sidebar">
            <div class="sidebar-top">
                <div class="nav-button" @onclick='() => Nav.NavigateTo("/dashboard")'>Dashboard</div>
                <div class="nav-button" @onclick='() => Nav.NavigateTo("/kanjilevels")'>Kanji Levels</div>
            </div>
            <div class="sidebar-bottom">
                <div class="nav-button" @onclick='() => Nav.NavigateTo("/")'>Log Out</div>
            </div>
        </div>
    }

    <main class="main-content">
        @Body
    </main>

    <GlobalToast />
</div>

